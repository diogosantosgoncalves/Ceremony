<Window x:Class="Ceremony.View.Tela_Consulta_Cerimonial"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ceremony.View"
        mc:Ignorable="d"
        Title="Cerimônia" Height="550" Width="745" Background="AliceBlue" WindowStartupLocation="CenterScreen">
    <StackPanel>
        <StackPanel Margin="10" HorizontalAlignment="Center">
            <Label Content="Consulta de Cerimônia" FontSize="20" FontWeight="Black"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="10 0 0 0">
            <Label Content="Cliente: " FontWeight="DemiBold" FontSize="15"/>
            <TextBox x:Name="txt_cliente" Width="400" Height="25" Margin="0 0 5 0"/>
            <Button x:Name="bt_pesquisar"  Content="Pesquisar" Height="25"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Left">
            <ListView  x:Name="lt_consulta_clientes" Width="700" Height="350" Margin="15">
            </ListView>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="bt_Confirmar" Content="Confirmar" Width="100" Height="30" />
        </StackPanel>
    </StackPanel>
</Window>
