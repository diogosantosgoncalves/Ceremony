<Window x:Class="Ceremony.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ceremony"
        mc:Ignorable="d"
        Title="Albertassi Cerimônia" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Cadastro">
                <MenuItem Header="Clientes" Click="Abre_Menu_Clientes">
                </MenuItem>
                <MenuItem Header="Tipos de Serviços" Click="Abre_Menu_Tipos_Servicos"/>
                <MenuItem Header="Serviços" Click="Abre_Menu_Servicos"/>
            </MenuItem>
            <MenuItem Header="Lançamento">
                <MenuItem Header="Cerimônia"/>
                <MenuItem Header="Buffet"/>
            </MenuItem>
            <Separator/>
            <MenuItem Header="Sair" />
        </Menu>
    </DockPanel>
</Window>
